extends ../layout

block content
  .container.body-content
    .well
      form.form-horizontal(enctype='multipart/form-data', method='POST', action='/user/edit')
        fieldset
          legend Change Password or Profile Picture
          .form-group
            label.col-sm-4.control-label Password
            .col-sm-4
              input.form-control(maxlength='30', type='password', name='password')
          .form-group
            label.col-sm-4.control-label Confirm Password
            .col-sm-4
              input#inputPassword.form-control(maxlength='30', type='password', name='repeatedPassword')
          .form-group
            label.col-sm-4.control-label Profile Picture:
            .col-sm-6
              input#image.form-control(type='file', name='image')
          .form-group
            .col-sm-4.col-sm-offset-4
              button.btn.btn-primary(type='submit') Submit
              a.btn.btn-default(href='/') Cancel
